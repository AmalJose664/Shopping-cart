












<section>
    <div class="container">
        <div class="row" >
            <h3 class="text-center warn mt-3"></h3>
            <ul class="products list-group shadow-hover" style="width: 80%; background-color: #f5f5f5; border-radius: 8px;margin-top: 60px;padding: 60px;">
                
                {{#each products}}
                <li style="height: 500%; border-radius: 10px; font-size: 20px; background-color: #f5f5f5 !important; margin: 50px;" class="mt-2 list-group-item d-flex justify-content-between align-items-center shadow-hover" >
                  {{this.product.name}}
                  <img alt="This product was deleted from our site"  style="width: 150px; height: auto; padding: auto; margin: auto;" src="{{this.product.secureUrl}}" alt="">
                    <span style="font: xx-large;" class="">{{this.quantity}}</span>
                </li>
                
                {{/each}}
            </ul>
            
            
        </div>
        <div class="" style="padding: 10px; margin: 10px; display: flex; align-items: center;justify-content: flex-end;">
            <a href="/order">Back to my Orders</a>
        </div>
    </div>
</section>

<script>
let list = document.querySelector('.products')
console.log(list.childElementCount)
if(!list.childElementCount){
  document.querySelector('.warn').innerHTML = "No Products found  :("
}
</script>